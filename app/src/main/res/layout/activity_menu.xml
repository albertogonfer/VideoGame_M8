<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".MenuActivity">

  <TextView
    android:id="@+id/textViewDifficultySelector"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:layout_marginStart="177dp"
    android:layout_marginEnd="176dp"
    android:text="@string/difficulty_selector_title"
    android:textSize="34sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.502"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>
  <RadioButton
    android:id="@+id/radioButtonEasy"
    android:layout_width="157dp"
    android:layout_height="57dp"
    android:layout_marginTop="76dp"
    android:layout_marginStart="146dp"
    android:layout_marginEnd="156dp"
    android:text="@string/difficulty_easy"
    android:textAlignment="textStart"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.285"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textViewDifficultySelector"/>
  <RadioButton
    android:id="@+id/radioButtonMedium"
    android:layout_width="156dp"
    android:layout_height="56dp"
    android:layout_marginTop="24dp"
    android:layout_marginStart="146dp"
    android:layout_marginEnd="156dp"
    android:checked="true"
    android:text="@string/difficulty_medium"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.333"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/radioButtonEasy"/>
  <RadioButton
    android:id="@+id/radioButtonHard"
    android:layout_width="156dp"
    android:layout_height="62dp"
    android:layout_marginTop="28dp"
    android:layout_marginStart="146dp"
    android:layout_marginEnd="156dp"
    android:text="@string/difficulty_hard"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.259"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/radioButtonMedium"/>
  <Button
    android:id="@+id/play_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="57dp"
    android:layout_marginBottom="268dp"
    android:layout_marginStart="158dp"
    android:layout_marginEnd="159dp"
    android:text="@string/play_button"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/radioButtonHard"/>
</androidx.constraintlayout.widget.ConstraintLayout>